<div class="container-fluid">
 <h1 class="card-heading">
  <span class="word">Stock<span class="superscript">s</span> </span>
  <span class="word">News</span>
</h1>
  <div class="row cards">
    <% @stock_news.each do |article| %>
      <div class="col-md-4">
        <div class="card mb-4">
          <img src="<%= article['urlToImage'] %>" alt="Article Image" class="card-img card-img-top">
          <div class="card-body">
            <h5 class="card-title"><%= article['title'] %></h5>
            <p class="card-text"><%= article['description'] %></p>
            <a href="<%= article['url'] %>" class="btn btn-primary">Read More</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
